---
import { Icon } from "astro-icon/components";
import { navBarConfig, siteConfig } from "../config";
import { LinkPresets } from "../constants/link-presets";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import { LinkPreset, type NavBarLink } from "../types/config";
import { url } from "../utils/url-utils";
import LightDarkSwitch from "./LightDarkSwitch.svelte";
import Search from "./Search.svelte";
import DisplaySettings from "./widget/DisplaySettings.svelte";
import DropdownMenu from "./widget/DropdownMenu.astro";
import NavMenuPanel from "./widget/NavMenuPanel.astro";

const className = Astro.props.class;

let links: NavBarLink[] = navBarConfig.links.map(
	(item: NavBarLink | LinkPreset): NavBarLink => {
		if (typeof item === "number") {
			return LinkPresets[item];
		}
		return item;
	},
);

const themeIcons = [
	{ mode: "light", icon: "material-symbols:wb-sunny-outline-rounded" },
	{ mode: "dark", icon: "material-symbols:dark-mode-outline-rounded" },
	{ mode: "auto", icon: "material-symbols:radio-button-partial-outline" },
];
---
<div id="navbar" class="z-50 onload-animation">
    <div class="absolute h-8 left-0 right-0 -top-8 bg-[var(--card-bg)] transition"></div> <!-- used for onload animation -->
    <div class:list={[
        className,
        "card-base !overflow-visible max-w-[var(--page-width)] h-[4.5rem] !rounded-t-none mx-auto flex items-center justify-between px-4"]}>
        <a href={url('/')} class="btn-plain scale-animation rounded-lg h-[3.25rem] px-5 font-bold active:scale-95">
            <div class="flex flex-row text-[var(--primary)] items-center text-md">
                <Icon name="material-symbols:home-outline-rounded" class="text-[1.75rem] mb-1 mr-2" />
                {siteConfig.title}
            </div>
        </a>
       <div id="navbar-links-container" class="hidden md:flex items-center transition-opacity duration-300">
            {links.map((l) => {
                return <DropdownMenu link={l} />;
            })}
        </div>
        <div class="flex">
            <!-- Search bar for desktop - instant display with Astro icons -->
            <div id="search-bar" class="hidden lg:flex transition-all items-center h-11 mr-2 rounded-lg
                bg-black/[0.04] hover:bg-black/[0.06] focus-within:bg-black/[0.06]
                dark:bg-white/5 dark:hover:bg-white/10 dark:focus-within:bg-white/10
            ">
                <Icon name="material-symbols:search" class="absolute text-[1.25rem] pointer-events-none ml-3 transition my-auto text-black/30 dark:text-white/30" />
                <input id="search-input-desktop" placeholder={i18n(I18nKey.search)}
                    class="transition-all pl-10 text-sm bg-transparent outline-0
                    h-full w-40 text-black/50 dark:text-white/50"
                />
            </div>

            <!-- Search toggle button for mobile - instant display -->
            <button aria-label="Search Panel" id="search-switch"
                class="btn-plain scale-animation lg:!hidden rounded-lg w-11 h-11 active:scale-90">
                <Icon name="material-symbols:search" class="text-[1.25rem]" />
            </button>

            <Search client:idle></Search>
            {!siteConfig.themeColor.fixed && (
                    <button aria-label="Display Settings" class="btn-plain scale-animation rounded-lg h-11 w-11 active:scale-90" id="display-settings-switch">
                        <Icon name="material-symbols:palette-outline" class="text-[1.25rem]"></Icon>
                    </button>
            )}
            <!-- z-50 make the panel higher than other float panels -->
            <div class="relative z-50" id="theme-switch-wrapper">
                <button aria-label="Light/Dark Mode" class="relative btn-plain scale-animation rounded-lg h-11 w-11 active:scale-90" id="scheme-switch">
                    {themeIcons.map(({ mode, icon }) => (
                        <div class={`absolute theme-icon-${mode}`}>
                            <Icon name={icon} class="text-[1.25rem]" />
                        </div>
                    ))}
                </button>
                <LightDarkSwitch client:idle></LightDarkSwitch>
            </div>
            <button aria-label="Menu" name="Nav Menu" class="btn-plain scale-animation rounded-lg w-11 h-11 active:scale-90 md:!hidden" id="nav-menu-switch">
                <Icon name="material-symbols:menu-rounded" class="text-[1.25rem]"></Icon>
            </button>
        </div>
        <NavMenuPanel links={links}></NavMenuPanel>
        <DisplaySettings client:only="svelte"></DisplaySettings>
    </div>
</div>

<script>

function loadButtonScript() {
    let settingBtn = document.getElementById("display-settings-switch");
    if (settingBtn) {
        settingBtn.onclick = function () {
            let settingPanel = document.getElementById("display-setting");
            if (settingPanel) {
                settingPanel.classList.toggle("float-panel-closed");
            }
        };

        if (settingBtn.dataset.hoverBound !== "1") {
            settingBtn.dataset.hoverBound = "1";

            let closeTimer = 0;

            const getPanel = () => document.getElementById("display-setting");
            const open = () => {
                const panel = getPanel();
                if (panel) panel.classList.remove("float-panel-closed");
            };
            const close = () => {
                const panel = getPanel();
                if (panel) panel.classList.add("float-panel-closed");
            };
            const cancelClose = () => {
                window.clearTimeout(closeTimer);
            };
            const scheduleClose = () => {
                window.clearTimeout(closeTimer);
                closeTimer = window.setTimeout(close, 120);
            };

            const bindPanelHover = (panel) => {
                if (panel.dataset.hoverBound === "1") return;
                panel.dataset.hoverBound = "1";
                panel.addEventListener("mouseenter", cancelClose);
                panel.addEventListener("mouseleave", (e) => {
                    const to = e.relatedTarget;
                    if (to instanceof Node && settingBtn.contains(to)) return;
                    scheduleClose();
                });
            };

            settingBtn.addEventListener("mouseenter", () => {
                cancelClose();
                open();
                const panel = getPanel();
                if (panel) bindPanelHover(panel);
            });

            settingBtn.addEventListener("mouseleave", (e) => {
                const panel = getPanel();
                const to = e.relatedTarget;
                if (panel && to instanceof Node && panel.contains(to)) return;
                scheduleClose();
            });
        }
    }

    let menuBtn = document.getElementById("nav-menu-switch");
    if (menuBtn) {
        menuBtn.onclick = function () {
            let menuPanel = document.getElementById("nav-menu-panel");
            if (menuPanel) {
                menuPanel.classList.toggle("float-panel-closed");
            }
        };
    }
}

loadButtonScript();

function setupSearchBar() {
    const bar = document.getElementById("search-bar");
    const input = document.getElementById("search-input-desktop");
    if (!bar || !input) return;
    const expand = () => input.classList.add("w-60");
    const collapse = () => input.classList.remove("w-60");
    bar.addEventListener("mouseenter", () => {
        expand();
        input.focus();
    });
    bar.addEventListener("mouseleave", () => {
        input.blur();
        collapse();
    });
    input.addEventListener("focus", expand);
    // keep expanded while typing; collapse only on mouseleave
}

setupSearchBar();
</script>

<style>
    html[data-theme-mode="light"] .theme-icon-dark,
    html[data-theme-mode="light"] .theme-icon-auto,
    html[data-theme-mode="dark"] .theme-icon-light,
    html[data-theme-mode="dark"] .theme-icon-auto,
    html[data-theme-mode="auto"] .theme-icon-light,
    html[data-theme-mode="auto"] .theme-icon-dark {
        display: none;
    }
</style>
